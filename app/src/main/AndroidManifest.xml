<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.doublesoft.dgscores">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CoursesActivity"
            android:label="@string/title_activity_courses"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".PlayersActivity"
            android:label="@string/title_activity_players"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".ScorecardsActivity"
            android:label="@string/title_activity_scorecards"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".StartCourseActivity"
            android:label="@string/title_activity_play_course"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".AddCourseActivity"
            android:label="@string/title_activity_add_course"
            android:parentActivityName=".CoursesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CoursesActivity" />
        </activity>
        <activity
            android:name=".ChooseCourseActivity"
            android:label="@string/choose_course"
            android:parentActivityName=".StartCourseActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".StartCourseActivity"/>
            ></activity>
    </application>

</manifest>